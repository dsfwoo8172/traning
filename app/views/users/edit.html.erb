
<%= form_with model: @user, url: user_edit_user_path, html: { class: 'col-6 mx-auto mt-5'} do |f| %>
  <h1 class="text-center">編輯基本資料</h1>
  <%= render 'shared/error_messages', f: f %>

  <div class="mb-3">
    <%= f.label :email, '信箱' %><span class="text-danger ms-1">(必填且作為登入帳號)</span>
    <%= f.text_field :email, class: 'form-control', placeholder: '信箱'  %>
  </div>

  <div class="mb-3">
    <%= f.label :password, '密碼' %><span class="text-danger ms-1">(必填)</span>
    <%= f.password_field :password, class: 'form-control', placeholder: '密碼'  %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, '密碼確認' %><span class="text-danger ms-1">(必填)</span>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '請再輸入一次密碼' %>
  </div>

  <div class="mb-3">
    <%= f.label :username, '使用者名稱' %>
    <%= f.text_field :username, class: 'form-control', placeholder: '使用者名稱'  %>
  </div>
  
  <%= f.fields_for :profile do |ff| %>
    <div class="mb-3">
      <%= ff.label :phone, '手機號碼' %>
      <%= ff.text_field :phone, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= ff.label :address, '地址' %>
      <%= ff.text_field :address, class: 'form-control' %>
    </div>

     <div class="mb-3">
      <%= ff.label :bio, '簡介' %>
      <%= ff.text_area :bio, class: 'form-control' %>
    </div>
  <% end %>
  
  <%= f.button '更新資料', class: 'btn btn-primary' %>
<% end %>