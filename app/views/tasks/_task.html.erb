<%= content_tag :div, id: dom_id(task), class: 'rTableRow' do %>
  <div class="rTableCell"><%= task.title %></div>
  <div class="rTableCell"><%= translate_states(task.state) %></div>
  <div class="rTableCell"><%= translate_order(task.priority) %></div>
  <div class="rTableCell"><%= task.start_time.strftime("%Y/%m/%d %I:%M %p") %></div>
  <div class="rTableCell"><%= task.end_time.strftime("%Y/%m/%d %I:%M %p") %></div>
  <div class="rTableCell">
    <% task.tags.map(&:name).each do |name| %>
    <span class="badge bg-info"><%= name %></span>
    <% end %>
  </div>
  <div class="rTableCell">
    <%= link_to '編輯', edit_task_path(task), class: 'btn btn-primary p-0 px-3' %>
    <%= link_to '刪除', task_path(task), data: { "turbo-method": :delete, confirm: '你確定要刪除這個任務' }, class: 'btn btn-danger p-0 px-3' %>
  </div>
<% end %>