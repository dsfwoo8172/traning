

<%= form_for task, html: {style: 'width: 500px; margin: auto;'} do |f| %>
  <%= render 'shared/error_messages', f: f %>
  
  <%= f.text_field :title %>
  <%= f.select :order, Task::ORDER.map{|order| [translate_order(order), order]}%>
  <%= f.select :state, Task::STATE.map{|state| [translate_states(state), state]}%>
  <%= f.datetime_select :start_time %>
   <%= f.datetime_select :end_time %>
  <%= f.button %>
<% end %>