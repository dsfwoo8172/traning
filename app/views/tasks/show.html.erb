
<div class="w-50 mx-auto">
  <h1 class="text-center mt-5"><%= @task.title %></h1>
  <hr>
  <p>
    <%= @task.content %>
  </p>
  <hr>
  <% @task.tags.map(&:name).each do |name| %>
    <span class="badge bg-info"><%= name %></span>
  <% end %>
  <hr>
  <div>
    <%= link_to '編輯', edit_task_path(@task), class: 'btn btn-primary' %>
    <%= link_to '回首頁', root_path, class: 'btn btn-danger' %>
  </div>

</div>

